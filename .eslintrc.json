{
  "root": true,
  "extends": ["next", "next/core-web-vitals", "eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    // ðŸ”¹ Permitir 'any' temporalmente
    "@typescript-eslint/no-explicit-any": "off",

    // ðŸ”¹ Mantener warnings de <img> pero no como error
    "@next/next/no-img-element": "warn",

    // ðŸ”¹ Variables no usadas como warning, no error
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],

    // ðŸ”¹ Otros ajustes opcionales de ESLint
    "react/react-in-jsx-scope": "off"
  }
}
